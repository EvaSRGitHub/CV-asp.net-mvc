@model CVApp.ViewModels.Skill.SkillViewModels.SkillEditViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <h2>Edit Skill</h2>
            <hr />
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="font-weight-bold text-secondary"></label>
                    <input asp-for="Name" class="form-control" value="@Model.Name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <hr />
                <div class="row justify-content-between">
                    <div class="col-md-6">
                        <button data-message="Are you sure you want to change this skill?" onclick="TriggerModal(event)" type="submit" asp-route-id="@Model.Id" class="btn btn-success">Save</button>
                    </div>
                    <div class="col-md-auto">
                        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-dark" role="button">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
