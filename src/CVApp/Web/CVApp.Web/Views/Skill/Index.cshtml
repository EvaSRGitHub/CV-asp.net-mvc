@model CVApp.ViewModels.Skill.SkillViewModels.SkillInputViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <h2>Create Skill</h2>
            <hr />
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="font-weight-bold text-secondary"></label>
                    <input asp-for="Name" class="form-control" placeholder="Skill name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <hr />
                <div class="row justify-content-end">
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
