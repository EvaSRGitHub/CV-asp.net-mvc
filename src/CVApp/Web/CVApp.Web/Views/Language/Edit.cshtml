@model CVApp.ViewModels.Language.LanguageViewModels.LanguageEditViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <h2>Languages</h2>
            <hr />
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="@Model.Name" class="font-weight-bold text-secondary"></label>
                    <input asp-for="@Model.Name" class="form-control" value="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Level" class="font-weight-bold text-secondary"></label>
                        <select asp-for="@Model.Level" class="form-control languageLavel order-alpha" id="levelId">
                            <option value="@Model.Level">@Model.Level</option>
                        </select>
                        <span asp-validation-for="@Model.Level" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="row justify-content-between">
                    <div class="col-md-6">
                        <button data-message="Are you sure you want to change this language?" onclick="TriggerModal(event)" type="submit" asp-route-id="@Model.Id" class="btn btn-success">Save</button>
                    </div>
                    <div class="col-md-auto">
                        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-dark" role="button">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function () {
        SetLanguageLevelDropdown();
    });
    </script>
    <partial name="_ValidationScriptsPartial" />
}