@model CVApp.ViewModels.Language.LanguageEditViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <h2>Languages</h2>
            <hr />
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <input asp-for="@Model.InputVM.ResumeId" type="hidden" />
                <div class="form-group">
                    <label asp-for="@Model.InputVM.Name">Language Name</label>
                    <input asp-for="@Model.InputVM.Name" class="form-control" value="@Model.InputVM.Name">
                    <span asp-validation-for="@Model.InputVM.Name" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.InputVM.Level">Level</label>
                        <select asp-for="@Model.InputVM.Level" class="form-control languageLavel order-alpha" id="levelId">
                            <option value="@Model.InputVM.Level">@Model.InputVM.Level</option>
                        </select>
                        <span asp-validation-for="@Model.InputVM.Level" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <button type="submit" asp-route-Id="@Model.Id" class="btn btn-primary">Save</button>
                    </div>
                    <div class="col-md-auto">
                        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-info" role="button">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
    $(document).ready(function () {

        SetLanguageLevelDropdown();
    });
    </script>
    <partial name="_ValidationScriptsPartial" />
}