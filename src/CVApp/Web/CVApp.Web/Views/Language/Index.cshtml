@model CVApp.ViewModels.Language.LanguageViewModels.LanguageInputViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <h2>Languages</h2>
            <hr />
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="font-weight-bold text-secondary"></label>
                    <input asp-for="Name" class="form-control" placeholder="Language name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Level" class="font-weight-bold text-secondary"></label>
                        <select asp-for="Level" class="form-control languageLavel order-alpha" id="levelId">
                            <option value="">Select Level</option>
                        </select>
                        <span asp-validation-for="Level" class="text-danger"></span>
                    </div>
                </div>
                <hr />
                <div class="row justify-content-end">
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function () {
        SetLanguageLevelDropdown();
    });
</script>
<partial name="_ValidationScriptsPartial" />
}