@model CVApp.ViewModels.Language.LanguageViewModels.LanguageEditViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <h2>Languages</h2>
            <hr />
            <form method="post">
                <div class="form-group">
                    <label asp-for="@Model.Name" class="font-weight-bold text-secondary"></label>
                    <input asp-for="@Model.Name" class="form-control" value="@Model.Name" readonly>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.Level" class="font-weight-bold text-secondary"></label>
                        <input asp-for="@Model.Level" class="form-control" value="@Model.Level" readonly>
                    </div>
                </div>
                <hr />
                <div class="row justify-content-between">
                    <div class="col-md-6">
                        <button data-message="Are you sure you want to delete this language?" onclick="TriggerModal(event)" type="submit" asp-route-id="@Model.Id" class="btn btn-danger">Delete</button>
                    </div>
                    <div class="col-md-auto">
                        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-dark" role="button">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

