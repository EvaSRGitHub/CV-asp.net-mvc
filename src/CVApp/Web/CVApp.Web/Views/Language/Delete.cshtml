@model CVApp.ViewModels.Language.LanguageEditViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <h2>Languages</h2>
            <hr />
            <form method="post">
                <input asp-for="@Model.InputVM.ResumeId" type="hidden" />
                <div class="form-group">
                    <label asp-for="@Model.InputVM.Name">Language Name</label>
                    <input asp-for="@Model.InputVM.Name" class="form-control" value="@Model.InputVM.Name" readonly>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="@Model.InputVM.Level">Level</label>
                        <input asp-for="@Model.InputVM.Level" class="form-control" value="@Model.InputVM.Level" readonly>
                    </div>
                </div>
                <hr />
                <div class="row">
                    <div class="col-md-6">
                        <button data-message="Are you sure you want to delete this language." onclick="TriggerModal(event)" type="submit" asp-route-Id="@Model.Id" class="btn btn-danger">Delete</button>
                    </div>
                    <div class="col-md-auto">
                        <a href="javascript:void(0);" onclick="history.go(-1);" class="btn btn-info" role="button">Back</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

