@model CVApp.ViewModels.PersonalInfo.PersonalInfoOutViewModel

<div class="container">
    <div class="row">
        <div class="col-md-8 offset-2">
            <h2>Personal Information</h2>
            <hr />

            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="FirstName">First name</label>
                        <input asp-for="FirstName" class="form-control" value="@Model.FirstName" readonly>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="LastName">Last name</label>
                        <input asp-for="LastName" class="form-control" value="@Model.LastName" readonly>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <label asp-for="Email">Email</label>
                        <input asp-for="Email" class="form-control" value="@Model.Email" readonly>
                    </div>
                    <div class="form-group col-md-6">
                        <label asp-for="PhoneNumber">Phone Number</label>
                        <input asp-for="PhoneNumber" class="form-control" value="@Model.PhoneNumber" readonly>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <label asp-for="DateOfBirth">Date of birth</label>
                        <input asp-for="DateOfBirth" class="form-control" value="@Model.DateOfBirth" readonly>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="Picture">Picture</label>
                        <input asp-for="Picture" class="form-control" value="@Model.Picture" readonly>
                    </div>
                    <div class="form-group col-md-4">
                        <label asp-for="RepoProfile">Portfolio</label>
                        <input asp-for="RepoProfile" class="form-control" value="@Model.RepoProfile" readonly>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Address">Address</label>
                    <input asp-for="Address" class="form-control" value="@Model.Address" readonly>
                </div>
                <div class="form-group">
                    <label asp-for="Summary">Summary</label>
                    <textarea id="mytextarea" asp-for="Summary" class="form-control" rows="5" value="@Model.Summary" readonly></textarea>
                </div>
                <div class="row justify-content-between">
                    <div class="col-md-6">
                        <a asp-controller="PersonalInfoController" asp-action="Edit" class="btn btn-primary" role="button" aria-pressed="true">Edit</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>tinymce.init({ selector: '#mytextarea' });</script>
}
